<div class="container">
	<h3 class="sub-heading">My Solutions<small class="pull-right"><%= @solutions.count %> total</small></h3>
	<% if @solutions.any? %>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th colspan="3" class="sol-link">Document links</th>
				</tr>
			</thead>
			<tbody>
				<% @solutions.each do |solution| %>
					<tr>
						<td><%= solution.name %></td>
					  <td>
						 	<%= link_to 'View first document', solution.attachment_1_url %>
					  </td>
					  <td>
						 	<%= link_to 'View second document', solution.attachment_2_url if solution.attachment_2.present? %>
					  </td>
					  <td>
						 	<%= link_to 'View third document', solution.attachment_3_url if solution.attachment_3.present? %>
					  </td>
					  <td><%= link_to 'Delete', gig_solution_path(gig_id: params[:gig_id], id: solution.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>
</div>