<h1>New Conversation</h1>

<%= form_tag user_conversations_path, method: :post do %>
	<div class="form-group text-center">
		<%= label_tag "Send to" %>
		<%= select_tag :receiver_id, options_from_collection_for_select(@recipients, :id, :name), class: "form-control input-lg" %>
	</div>

	<div>
		<%= label_tag :subject %><span class="required">*</span>
		<%= text_field_tag :subject, nil, placeholder: "Subject", class: "form-control input-lg" %>
	</div>

	<div>
		<%= label_tag :body %><span class="required">*</span>
		<%= text_area_tag :body, nil, placeholder: "Leave a comment", class: "form-control input-lg" %>
	</div>

	<%= submit_tag "Send", class: "btn btn-primary input-lg btn-block" %>
<% end %>